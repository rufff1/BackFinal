@model RegsterVM
@{
    ViewData["Title"] = "Register";
}


<!-- Banner Area Start -->
<div class="banner-area-wrapper">
    <div class="banner-area text-center">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="banner-content-wrapper">
                        <div class="banner-content">
                            <h2>sign up</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Banner Area End -->
<!-- Register start -->
<div class="register-area pt-150 pb-150">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3 text-center">
                <div class="login">
                    <div class="login-form-container">
                        <div class="login-text">
                            <h2>sign up</h2>
                            <span>Please login using account detail bellow.</span>
                        </div>
                        <div class="login-form">
                            <form method="post">
                                <div asp-validation-summary="ModelOnly" class="text text-danger"></div>
                                <input asp-for="Name" placeholder="name">
                                <span asp-validation-for="Name" class="text text-danger"></span>
                                <input asp-for="UserName" placeholder="UserName">
                                <span asp-validation-for="UserName" class="text text-danger"></span>
                                <input asp-for="Email" placeholder="Email">
                                <span asp-validation-for="Email" class="text text-danger"></span>
                                <input asp-for="Paswoord" placeholder="Paswoord">
                                <span asp-validation-for="Paswoord" class="text text-danger"></span>
                                <input asp-for="ConfirmPaswoord" placeholder="ConfirmPaswoord">
                                <span asp-validation-for="ConfirmPaswoord" class="text text-danger"></span>

                                <div class="button-box">

                                    <button type="submit" class="default-btn">sign up</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Register end -->


@section script{
    @await Html.PartialAsync("_ValidationPartial")
}
